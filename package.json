    "@types/sinon": "^10.0.4",
    "@types/uuid": "^8.3.1",
    "@types/yargs": "^17.0.5",
    "chai": "^4.3.4",
    "mocha": "^9.1.2",
    "sinon": "^11.1.2"
  }
